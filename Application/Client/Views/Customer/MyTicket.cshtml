@{
    ViewData["Title"] = "Request Ticket";
    Layout = "LayoutRequest";
}

<div class="card">
    <div class="card-body p-3">
        <div class="row">
            <div class="col-12">
                <div class="numbers">
                    @if (User.IsInRole("Customer") || User.IsInRole("Developer"))
                    {
                        <p class="text-sm mb-0 text-uppercase font-weight-bold">My Tickets</p>
                    }
                    else
                    {
                        <p class="text-sm mb-0 text-uppercase font-weight-bold">Assign Ticket</p>
                    }
                    <br />
                    <div id="cardDiv">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section CSS {
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
}

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/Ticket.js" asp-append-version="true"></script>
}